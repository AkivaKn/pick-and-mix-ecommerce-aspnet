@model IEnumerable<BasketItem>

@{
    ViewData["Title"] = "Basket";
}

<h1 class="text-center">Basket</h1>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card" style="width: 200px;">
                <div class="card-body text-center">
                    <h5 class="card-title">@item.Sweet.SweetName</h5>
                    <img class="card-img" src="@item.Sweet.ImageURL" alt="Item" style="max-width: 200px;">
                    <p>@((item.Sweet.PriceInPence / 100d).ToString("c"))</p>
                </div>
            </div>
        </div>
    }
</div>